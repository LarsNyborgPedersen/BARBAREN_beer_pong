<Window x:Class="BARBAREN_beer_pong.FAQ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BARBAREN_beer_pong"
        mc:Ignorable="d"
        Title="FAQ" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="FAQ (Oftest stillede spørgsmål)" Grid.Row="0" HorizontalAlignment="Center" FontSize="50" FontWeight="Bold"/>

        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="1">
            <TextBlock x:Name="FAQText"  FontSize="20"/>
        </ScrollViewer>
    </Grid>
</Window>
