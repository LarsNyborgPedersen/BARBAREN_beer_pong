<UserControl x:Class="BARBAREN_beer_pong.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BARBAREN_beer_pong.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Button x:Name="addTeam" Grid.Row="0" Content="Tilføj team" Click="AddTeam_Click" />
        <Button x:Name="addScore" Grid.Row="1" Content="Ændre Score" Click="AddScore_Click" />
        <Button x:Name="Rank" Grid.Row="2" Content="Se top 10" Click="Rank_Click" />
    </Grid>
</UserControl>
